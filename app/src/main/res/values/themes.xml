<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash screen theme -->
    <style name="Theme.NOMM.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.NOMM</item>
    </style>

    <!-- Base application theme - Material3 for Compose compatibility -->
    <style name="Theme.NOMM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use transparent status bar for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
